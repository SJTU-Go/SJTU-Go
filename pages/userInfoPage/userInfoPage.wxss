  flex-direction: row;
}

.rank_text {
  
  height: 35px;
  line-height: 35px;
  margin-left: 10rpx;
  color: #AAAAAA;
}

.center_rank image {
  width: 25px;
  height: 25px;
}

.center_score {
  font-size: 13px;
  width: 33%;
