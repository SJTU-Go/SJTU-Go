/* pages/databaseGuide/databaseGuide.wxss */

@import "../../style/guide.wxss";

.title
{ margin:100;
  height: 200rpx;
  font-size: 100rpx;
  text-align: center;
  justify-content: center;
}
.center {
  display: flex;
  align-items: center;
  justify-content: center; 
  border:1px solid;
  border-color: rgb(183, 188, 192);
  width: 88%;
  height: 120px;
  background: white;
  margin-left: 20px;
  flex-direction: column;
  margin-top: 110px;
  margin-bottom: 20px;
  border-radius: 7px;
  box-shadow:6rpx 6rpx 6rpx 6rpx rgba(170, 232, 201, 0.71) 
}

.center_top {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 60px;
  margin: 0 auto;
  margin-top: 20rpx;
  border-bottom: 1px solid #EEEEEE;
}
.center_down {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 60px;
  margin: 0 auto;
  margin-top: 20rpx;
}
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.smallblock
{    display: flex;
flex-direction: row;
text-align: center;
align-items: center;
width:30%;
}
.largeblock
{    
  display: flex;
flex-direction: row;
text-align: center;
align-items: center;
width:50%;}
.block
{ width:70%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.containerbutton
{
  height: 110rpx;
  width: 100%;
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.submit{
  width: 80%;
  background-color: rgb(63, 210, 18);
  color: white;
  font-size: 45rpx;
  border-radius: 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.btn1 {
  width: 80%;
  background-color: rgb(0, 0, 0);
  color: white;
  border-radius: 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.btnImg {
  margin-right: 8rpx;
  width: 55rpx;
  height: 45rpx;
}
.btn1::after {
  border-radius: 98rpx;
  border: 0; 
}
.btn2 {
  width: 80%;
  background-color: rgba(61, 61, 61, 0.53);
  color: white;
  border-radius: 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.guide .counter {
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  align-content: space-between;}