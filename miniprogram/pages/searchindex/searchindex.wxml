        <view class = 'upsection'>From</view>
        <view class = 'downsection'>
         <input bindinput="depart"    placeholder-style="color:rgb(5, 5, 5,0.651);" placeholder="当前位置" />
        </view>
      </view> 
    </view>  

    <view class="section">
      <view class = 'emptyblock'></view>
      <view class = 'upsection'>Pass</view>
      <view class = 'downsection'>
        <input bindinput="pass"    placeholder-style="color:rgb(5, 5, 5,0.651);" placeholder="点击输入..." />
      </view>
    </view>  
    <view class="divLine"></view>
    <view class="section">
      <view class = 'emptyblock'></view>
      <view class = 'upsection'>To</view>
      <view class = 'downsection'>
        <input bindinput="arrive"    placeholder-style="color:rgb(5, 5, 5,0.651);" placeholder="点击输入..." />
      </view>
    </view>  
    <view class="divLine"></view>

  </form>

  </view>

</view>

</view>
