<view class="page">
  <view class="page__bd">
     <view class = 'mid'>
        <view class="search-bar">
            <view class="search-bar__form">
                <view class="search-bar__box">

                    <input type="text" class="search-bar__input"  bindinput="searchInput" placeholder="搜索评论"maxlength='10' value="{{inputVal}}" focus="{{inputShowed}}"   bindinput="inputTyping" />

                </view>
                                    <icon class="icon-search_in-box" type="search" size="30"></icon>
            </view>
          
        </view>
    </view>

  </view>
</view>



    <view wx:if='{{boxshow}}' wx:for="{{reslist}}" wx:for-item="item" class="msg-item" bindtap="viewcomment"  wx:for-index='i'   data-ind="{{i}}">
         <view class = 'toppart'>
            <view class='titlename' >{{item.relatedPlace}}</view>
            <view class='right'>
            <view class='distancename' >{{item.distance|Int}}米</view></view>
        </view>
         <view class = 'toppart'>
            <view class='commentname' >{{item.title}}</view>
        </view> 
         <view class = 'toppart'>
            <view class='rightt'><view class='usersname' >{{item.userID}} {{item.commentTime}}</view></view>
        </view> 
    </view>
        <view class = "bottomblock">
        <button class = 'navigatebutton'bindtap="navigatePage">地图查看</button>
    </view>