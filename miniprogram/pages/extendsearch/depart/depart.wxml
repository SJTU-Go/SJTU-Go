<map id="map4select" longitude="121.429846" latitude="31.021807" scale="16"  markers="{{markers}}" bindtap="hideModal" bindmarkertap="returnresult"   show-location style="width: 100%; height: 40vh;" bindregionchange="regionchange">
  <cover-view wx:if ="{{!coordinateview}}" style="  display: flex;justify-content: center;align-items: center;">
    <cover-view class="search-bar">
        <cover-view class="search-bar__box">
          <input type="text"  class="search-bar__input" placeholder="{{inputmessage}}" maxlength='40' value="{{inputVal}}" focus="{{inputShowed}}"   bindinput="inputTyping" />
          <cover-view class="icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
              <cover-image src="../../../images/canc.png" class="cancelimg"></cover-image>
          </cover-view>
        </cover-view>
      <icon class="searchicon" type="search" size="34" bindtap="searchout"></icon>
    </cover-view>
  </cover-view>
  <cover-view wx:if ="{{!coordinateview}}" style =" display: flex;">
    <cover-view style = "width:88%" />
      <cover-view style="margin-top:10rpx;background-color:white;box-shadow: 3px 3px 3px rgb(104, 102, 102);border-radius:5rpx">
          <cover-image src="../../../images/choose.png" class="chooseimg" bindtap = "chooselocate" ></cover-image>
      </cover-view>
  </cover-view>
  
  <cover-view wx:else style =" display: flex;flex-direction:column">
    <cover-view style =" display: flex;">
      <cover-view style = "width:88%" />
        <cover-view style="margin-top:10rpx;background-color:white;box-shadow: 3px 3px 3px rgb(104, 102, 102);border-radius:5rpx">
            <cover-image src="../../../images/correct.png" class="chooseimg" bindtap = "chooseclick" ></cover-image>
        </cover-view>
      </cover-view>
    <cover-view style =" display: flex;">
      <cover-view style = "width:88%" />
        <cover-view style="margin-top:0rpx;background-color:white;box-shadow: 3px 3px 3px rgb(104, 102, 102);border-radius:5rpx">
            <cover-image src="../../../images/back.png" class="chooseimg" bindtap = "chooseback" ></cover-image>
        </cover-view>
      </cover-view>
  </cover-view>

</map>

