
<view class="page">
  <view class="page__bd">
    <view class="search-bar">
      <view class="search-bar__form">
        <view class="search-bar__box">
          <input type="text"  class="search-bar__input" placeholder="{{inputmessage}}" maxlength='40' value="{{inputVal}}" focus="{{inputShowed}}"   bindinput="inputTyping" />
          <view class="icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
            <icon type="clear" size="17"></icon>
              
      </view>
        </view>

      </view>

          <icon class="searchicon" type="search" size="34" bindtap="searchout"></icon>
    </view>
    <view class="cells searchbar-result" wx:if="{{inputVal.length > 0}}">
      <!-- 搜索列表 -->
      <view class="weui-cell__bd" wx:for="{{list}}" wx:key="key">
        <!-- 列表名称 -->
        <view class='list_name'  data-index='{{index}}' data-id='{{item.deviceId}}' 
        data-name='{{item.carNum}}' bindtap='btn_name'>
          <!-- 昵称 -->
          <label class='lab_name'>{{item.carNum}}</label>
        </view>
      </view>
    </view>   
  </view>
</view>

<map id="map4select" longitude="121.429846" latitude="31.021807" scale="16"  markers="{{markers}}" bindtap="hideModal" bindmarkertap="returnresult"   show-location style="width: 100%; height: 40vh;" bindregionchange="regionchange"></map>

<!--wx:if="{{hasmarkers}}"!-->
    <view wx:if='{{boxshow}}' wx:for="{{carList}}" wx:key="{{index}}" class="msg-item">
         <view class='user-name' bindtap = 'inputreturn' data-Name = '{{item.placeName}}' data-ID = '{{item.placeID}}'>{{item.placeName}}</view>
    </view>

